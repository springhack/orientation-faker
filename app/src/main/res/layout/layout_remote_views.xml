<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/bg_notification"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:ignore="Overdraw,UselessParent,ContentDescription,VectorDrawableCompat"
    >

    <FrameLayout
        android:id="@+id/remote_views_button1"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:foreground="@drawable/fg_touch"
        >

        <ImageView
            android:id="@+id/remote_views_shape1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bg_circle"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables"
            >

            <ImageView
                android:id="@+id/remote_views_icon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                tools:ignore="ContentDescription,VectorDrawableCompat"
                tools:src="@drawable/ic_unspecified"
                />

            <TextView
                android:id="@+id/remote_views_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/fg_notification"
                android:textSize="@dimen/text_icon"
                tools:ignore="SmallSp,SpUsage"
                tools:text="@string/label_unspecified"
                />
        </LinearLayout>
    </FrameLayout>

